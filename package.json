{
  "name": "root",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./examples/subgraph/*",
    "./examples/subgraph/src/mutations/*"
  ],
  "scripts": {
    "build:packages": "lerna exec --scope @graphprotocol/* -- yarn build",
    "build:examples": "lerna exec --scope example-* -- yarn build",
    "env:init": "([ ! -d graph-cli ] && git clone --branch mutations-build https://github.com/dOrgTech/graph-cli) || true && cd graph-cli && yarn",
    "env:start": "yarn build:packages && ",
    "postinstall": "yarn env:init"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.2",
    "@types/react": "^16.8.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-utilities": "1.3.3",
    "apollo-link": "^1.2.12",
    "apollo-link-http": "^1.5.15",
    "apollo-link-state": "^0.4.2",
    "graphql": "^14.4.2",
    "graphql-tag": "^2.10.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  }
}
